{% extends 'base.html.twig' %}

{% block title %}{{ competitionSchedule.competition.area.name }} - {{ competitionSchedule.competition.name }}{% endblock %}

{% block nav %}
    <nav>
        <div>
            <a href="">
                <p>Prediction game</p>
            </a>
            <div>
                <ul>
                    <li>
                        <a href="{{ path('app_home') }}">Home</a>
                    </li>
                    <li>
                        <a href="{{ path('app_table', {'id': competitionId}) }}">Table</a>
                    </li>
                    <li>
                        <a href="{{ path('app_results', {'id': competitionId}) }}">Results</a>
                    </li>
                    <li>
                        <a href="{{ path('app_schedule', {'id': competitionId}) }}">Schedule</a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                    <li>
                        <a href="{{ path('app_admin') }}">Admin</a>
                    </li>
                    {% endif %}
                </ul>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <div>
                        <ul>
                            {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                                <li>
                                    <a href="{{ path('app_home', {
                                        '_switch_user': '_exit'
                                    }) }}">Exit Impersonation</a>
                                </li>
                            {% endif %}
                            <li>
                                <a href="{{ path('app_logout') }}">Log Out</a>
                            </li>
                        </ul>
                    </div>
                {% else %}
                    <a href="{{ path('app_login') }}">Log In</a>
                    <a href="{{ path('app_register') }}">Sign up</a>
                {% endif %}
            </div>
        </div>
    </nav>
{% endblock %}

{% block body %}
    <h1>{{ competitionSchedule.competition.area.name }} - {{ competitionSchedule.competition.name }}</h1>
    {% set currentMatchday = false %}
    {% for match in competitionSchedule.matches %}
        {% if currentMatchday is not same as match.matchday %}
            {% set currentMatchday = match.matchday %}
            <p>{{ currentMatchday }}</p>
        {% endif %}
        <p>
            {{ match.utcDate|date('d.m.Y') }} - {{ match.homeTeam.name }} - {{ match.awayTeam.name }}
        </p>
        <p></p>
    {% endfor %}
{% endblock %}