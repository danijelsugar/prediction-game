{% extends 'base.html.twig' %}

{% block title %}Hello PredictionController!{% endblock %}

{% block nav %}
    <nav>
        <div>
            <a href="">
                <p>Prediction game</p>
            </a>
            <div>
                <ul>
                    <li>
                        <a href="{{ path('app_home') }}">Home</a>
                    </li>
                   {{ include('_nav.html.twig') }}
                   {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <div>
                            <ul>
                                {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                                    <li>
                                        <a href="{{ path('app_home', {
                                            '_switch_user': '_exit'
                                        }) }}">Exit Impersonation</a>
                                    </li>
                                {% endif %}
                                <li>
                                    <a href="{{ path('app_logout') }}">Log Out</a>
                                </li>
                            </ul>
                        </div>
                    {% else %}
                        <a href="{{ path('app_login') }}">Log In</a>
                        <a href="{{ path('app_register') }}">Sign up</a>
                    {% endif %}
                </ul>
                
            </div>
        </div>
    </nav>
{% endblock %}

{% block body %}
<h1>Round prediction</h1>
{%  set currentMatchday = false %}
{% for match in competitionMatches.matches %}
    {% if currentMatchday is not same as match.matchday %}
        {% set currentMatchday = match.matchday %}
        <p><a href="">Round #{{ currentMatchday }}</a></p>
    {% endif %}
    <p>{{ match.utcDate | date('d.m.Y') }}</p>
{% endfor %}
{% endblock %}
