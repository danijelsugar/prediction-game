<div class="card">
    <div class="card-header">
        <h3 class="card-title">{{ competitionName  ~ ' ' ~ season }}</h3>
        <p class="card-text">Schedule</p>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Teams</th>
                </tr>
            </thead>
            <tbody>
                {% set currentMatchday = false %}
                {% for match in competitionSchedule.matches %}
                    {% if currentMatchday is not same as match.matchday %}
                        {% set currentMatchday = match.matchday %}
                        <tr>
                            <td class="round" colspan="2">Round {{ currentMatchday }}</td>
                        </tr>
                    {% endif %}
                    <tr>
                        <td>{{ match.utcDate|date('d.m.Y H:i:s') }}</td>
                        <td>{{ match.homeTeam.name ~ ' - ' ~  match.awayTeam.name}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>