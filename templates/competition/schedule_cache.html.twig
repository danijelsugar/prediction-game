<div class="card">
    <div class="card-header">
        <h3 class="card-title">{{ competitionName  ~ ' ' ~ season }}</h3>
        <p class="card-text">Schedule</p>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Teams</th>
                </tr>
            </thead>
            <tbody>
                {# {% set currentMatchday = false %}
