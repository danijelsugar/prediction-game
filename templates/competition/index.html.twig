{% extends 'base.html.twig' %}

{% block title %}{{ competitionTeams.competition.name }}{% endblock %}

{% block nav %}
    <nav>
        <div>
            <a href="">
                <p>Prediction game</p>
            </a>
            <div>
                <ul>
                    <li>
                        <a href="{{ path('app_home') }}">Home</a>
                    </li>
                   {{ include('_nav.html.twig') }}
                   {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <div>
                            <ul>
                                {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                                    <li>
                                        <a href="{{ path('app_home', {
                                            '_switch_user': '_exit'
                                        }) }}">Exit Impersonation</a>
                                    </li>
                                {% endif %}
                                <li>
                                    <a href="{{ path('app_logout') }}">Log Out</a>
                                </li>
                            </ul>
                        </div>
                    {% else %}
                        <a href="{{ path('app_login') }}">Log In</a>
                        <a href="{{ path('app_register') }}">Sign up</a>
                    {% endif %}
                </ul>
                
            </div>
        </div>
    </nav>
{% endblock %}

{% block body %}
    <h1>{{ competitionTeams.competition.name }}</h1>
    <h3>Teams</h3>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Short name</th>
                <th>Tla</th>
                <th></th>
                <th>Address</th>
                <th>Website</th>
                <th>Email</th>
                <th>Founded</th>
                <th>Club colors</th>
                <th>Venue</th>
            </tr>
        </thead>
        <tbody>
            {% for team in competitionTeams.teams %}
                <tr>
                    <td>{{ team.name }}</td>
                    <td>{{ team.shortName }}</td>
                    <td>{{ team.tla }}</td>
                    <td></td>
                    <td>{{ team.address }}</td>
                    <td><a href="{{ team.website }}">{{ team.website }}</a></td>
                    <td><a href="mailto: {{ team.email }}">{{ team.email }}</a></td>
                    <td>{{ team.founded }}</td>
                    <td>{{ team.clubColors }}</td>
                    <td>{{ team.venue }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}