<div class="card">
    <div class="card-header">
        <h3 class="card-title">{{ competitionName  ~ ' ' ~ season }}</h3>
        <p class="card-text">Teams</p>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Short name</th>
                    <th>Tla</th>
                    <th>Founded</th>
                    <th>Club colors</th>
                    <th>Venue</th>
                </tr>
            </thead>
            <tbody>
                {% for team in competitionTeams %}
                    <tr>
                        <td>
                            {% if team.crest is not same as null and team.crest is not empty %}
                                <img src="{{ team.crest }}" alt="{{ team.name }} logo" style="width: 25px">
                            {% endif %}
                        </td>
                        <td>{{ team.name }}</td>
                        <td>{{ team.shortName }}</td>
                        <td>{{ team.tla }}</td>
                        <td>{{ team.founded }}</td>
                        <td>{{ team.clubColors }}</td>
                        <td>{{ team.venue }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">Teams info is currently not available.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>